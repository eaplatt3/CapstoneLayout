<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".Plans">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Blueprints"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:textColor="#000000"
        android:background="@drawable/first_floor"
        android:paddingRight="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/imgtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="First Floor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_marginStart="88dp"
        android:background="@drawable/location_sketch"
        android:paddingLeft="40dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/image1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/imgtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:gravity="center"
        android:text="Location Sketch"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/imgtxt1"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:background="@drawable/hinges_latches"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtxt1" />

    <TextView
        android:id="@+id/imgtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="244dp"
        android:gravity="center"
        android:text="Hinges And Latches"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image3" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_marginStart="88dp"
        android:background="@drawable/second_floor"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/image3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image3"
        app:layout_constraintTop_toBottomOf="@+id/imgtxt2" />

    <TextView
        android:id="@+id/imgtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:gravity="center"
        android:text="Second Floor"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/imgtxt3"
        app:layout_constraintTop_toBottomOf="@+id/image4" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:background="@drawable/kitchen_details"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgtxt3" />

    <TextView
        android:id="@+id/imgtxt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Kitchen Details"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image6"
        app:layout_constraintTop_toBottomOf="@+id/image5" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="153dp"
        android:layout_height="138dp"
        android:layout_marginStart="88dp"
        android:background="@drawable/transverse_section"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/image5"
        app:layout_constraintStart_toEndOf="@+id/image5"
        app:layout_constraintTop_toBottomOf="@+id/imgtxt4" />

    <TextView
        android:id="@+id/imgtxt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Second Floor"
        app:layout_constraintLeft_toRightOf="@+id/imgtxt5"
        app:layout_constraintTop_toBottomOf="@+id/image6" />

</android.support.constraint.ConstraintLayout>